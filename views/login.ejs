<%include partials/header%>

<div class="container">
	<div class="newuser">
		<h1>Login page</h1>
		<form action="/login" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="username" placeholder="username" pattern="^[a-zA-Z0-9_-]{3,20}$" title="Your login should be 3-20 characters long and can contain letters, numbers and '-', '_' signs">
			</div>
			<div class="form-group">
				<input class="form-control" type="password" name="password" autocomplete="off" placeholder="password" pattern="(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{6,15})$" title="Your password should be at least 6 symbols long and contain letters and numbers">
			</div>
			<div class="form-group">
				<a href="/forgot">Forgot your password?</a>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block" type="submit">Submit</button>
			</div>
		</form>
		<form action="/auth/42" method="get">
			<button class="btn btn-default btn-block">Intra 42 Login</button>
		</form>
		<form action="/auth/twitter" method="get">
			<button class="btn btn-info btn-block">Sign in with Twitter</button>
		</form>
	</div>
</div>

<%include partials/footer%>
