<%include partials/header%>

<div class="container">
	<div class="newuser">
		<h1>Reset Password</h1>
		<form action="/forgot" method="post">
			<div class="form-group">
				<input class="form-control" type="email" name="email" placeholder="email" pattern="^([0-9a-zA-Z]([-.\w]*[0-9a-zA-Z])*@(([0-9a-zA-Z][-\w])*[0-9a-zA-Z]\.)+[a-zA-Z]{1,9})$" title="Please enter a valid email address">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block" type="submit">Submit</button>
			</div>
		</form>
	</div>
</div>

<%include partials/footer%>
