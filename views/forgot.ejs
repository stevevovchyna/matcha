<%include partials/header%>

<div class="container">
	<div class="newuser">
		<h1>Reset Password</h1>
		<form action="/forgot" method="post">
			<div class="form-group">
				<input class="form-control" type="email" name="email" placeholder="email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Please enter a valid email address">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block" type="submit">Submit</button>
			</div>
		</form>
	</div>
</div>

<%include partials/footer%>
