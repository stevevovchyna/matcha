<body>
	<nav class="navbar navbar-default" style="margin-bottom: 2rem">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
					data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<% if (currentUser) { %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
								aria-expanded="false">Feed<span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="/feed/browse">Browse</a></li>
								<li><a href="/feed/research">Research</a></li>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
								aria-expanded="false">Profile<span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="/profile/<%= currentUser._id %>">My Profile</a></li>
								<li><a href="/profile/<%= currentUser._id %>/edit">Edit Profile</a></li>
								<li><a href="/likes/<%= currentUser._id %>/activity">Activity</a></li>
							</ul>
						</li>
					<li><a href="/conversations">Conversations</a></li>
					<% } %>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<%if (!currentUser) { %>
					<li><a href="/login">Log in</a></li>
					<li><a href="/register">Sign Up</a></li>
					<%} else { %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
							aria-expanded="false">Notifications <span id="notifications-badge" class="badge">0</span></a>
							<ul class="dropdown-menu" id="notifications-button">
								<li><a>You've got a new notification!</a></li>
								<li><a>You've got a new notification!</a></li>
							</ul>
						</li>
						<li><a>wazzup, <%=currentUser.username%>?</a></li>
						<li><a href="/logout">Logout</a></li>
					<%}%>

					<script>
						(() => {
							// var chatSocket = io('/chat');

							var currUser = "<%currentUser._id.toString()%>";
							var notification = document.createElement('li');
							var notificationsButton = document.getElementById('notifications-button');

							var notificationsBadge = document.getElementById('notifications-badge');
							var notifications = document.getElementById('notifications-button');
							notificationsBadge.innerText = notifications.children.length;

							eventSocket.on('newmessagenotification', notificat => {
								if (currUser !== notificat.userId.toString()) {
									notification.setAttribute('class', 'active');
									notification.innerHTML = "<a href=\"/conversations/" + notificat.conversationId + "\">You've got a new message from <a href=\"/profile/" + notificat.userId+ "\">" + notificat.user + "</a>";
									notificationsButton.appendChild(notification);
									document.getElementById('notifications-badge').innerText = document.getElementById('notifications-button').children.length;
								}
							})
						})();
					</script>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

	<div class="container" id="flash">
		<%if (error && error.length > 0) { %>
					<div class="alert alert-danger alert-dismissible"><%=error%></div>
					<% } %>
					<%if (success && success.length > 0) { %>
					<div class="alert alert-success alert-dismissible"><%=success%></div>
					<% } %>
			</div>
