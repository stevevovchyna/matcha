<%include partials/header%>

<div class="container">
	<div class="newuser">
		<h1>Reset your password!</h1>
		<form action="/reset/<%=token%>" method="post">
			<div class="form-group">
				<input class="form-control" type="password" name="password" value="" placeholder="New Password" pattern="(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{6,15})$" title="Your password should be at least 6 symbols long and contain letters and numbers">
			</div>
			<div class="form-group">
				<input class="form-control" type="password" name="confirm" autocomplete="off" value="" placeholder="Confirm Password" pattern="(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{6,15})$" title="Your password should be at least 6 symbols long and contain letters and numbers">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block" type="submit">Update Password</button>
			</div>
		</form>
	</div>
</div>

<%include partials/footer%>
